systemctl stop ns-core-nic.service
systemctl disable ns-core-nic.service
/opt/netronome/bin/ns-core-nic-setup clean

echo -e
echo -e "Uninstall of %{module_name} module (version %{version}) beginning:"
dkms remove -m %{module_name} -v %{version} --all --rpm_safe_upgrade

# restore backup FW
FIRMWARE_DIR=/lib/firmware/netronome
# CNIC is from deb/rpm and UPNIC is upstream FW or backup of
FIRMWARE_DIR_CNIC=/lib/firmware/netronome/cnic
FIRMWARE_DIR_UPNIC=/lib/firmware/netronome/nic

# 1) Delete symbolic links if any
find $FIRMWARE_DIR -maxdepth 1 -name *.nffw -type l -delete

# 2) create symlinks to 'restore' backup FW
ln -s $FIRMWARE_DIR_UPNIC/* $FIRMWARE_DIR/

exit 0
