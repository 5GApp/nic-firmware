#### install prerequists ####
# BSP
sudo sh -c 'echo "deb http://pasrv03.netronome.com/releases-intern/apt \
precise non-free" >/etc/apt/sources.list.d/netronome.list'
sudo apt-get update
sudo apt-get install nfp-sdk
sudo dpkg -i /releases-intern/nfp-bsp/dpkg/nfp-bsp_2015.7.16.201-1_amd64.deb
sudo dpkg -i /releases-intern/nfp-bsp/dpkg/nfp-bsp-dkms_2015.7.16.202-1_all.deb
sudo /opt/netronome/bin/nfp-flash -b 0 -c 0 \
    --i-accept-the-risk-of-overwriting-miniloader \
    -w /opt/netronome/flash/flash-nic.bin
reboot

#### build FW ####
# from build-infra build
make fetch-ng-nfd
make update-ng-nfd
make install-ng-nfd_nic

#### load FW and driver ####
# from build-infra build
./install/ng-nfd_nic/init/nic.sh restart ./install/ng-nfd_nic/mefw/ng-nfd_nic.fw
rmmod nfp
insmod install/ng-nfd_nic/netdev/nfp_net.ko fw_noload=1 nfp_reset=0

#### find out NFP netdev ####
ls /sys/bus/pci/devices/0000\:`lspci -d19ee: -k | grep -B2 nfp_net | \
    head -n1 | cut -f 1 -d ' '`/net

